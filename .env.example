# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
DATABASE_URL=your_postgresql_connection_string

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Email Configuration
# Choose one provider: gmail, outlook, or smtp
EMAIL_PROVIDER=outlook

# Gmail Configuration (if using Gmail)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password
GMAIL_SENDER_NAME="Your Name or Company"

# Outlook Configuration (if using Outlook)
OUTLOOK_EMAIL=your-email@outlook.com
OUTLOOK_PASSWORD=your-password
OUTLOOK_SENDER_NAME="Your Name or Company"

# SMTP Configuration (if using custom SMTP)
SMTP_EMAIL=your-email@domain.com
SMTP_PASSWORD=your-password
SMTP_HOST=smtp.domain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_SENDER_NAME="Your Name or Company"

# Resend Email Service (Optional fallback)
RESEND_API_KEY=re_your_api_key

# Application Settings
NODE_ENV=development
PORT=3000